{
    "compilerOptions": {
        "target": "es2016",
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6"],
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "incremental": true,
        "paths": {
            "@interfaces/*": ["interfaces/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/", "lib/", "./jest.config.ts"]
}
